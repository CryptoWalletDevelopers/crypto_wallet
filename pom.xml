<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.2.6.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<groupId>CryptoTeam</groupId>
	<artifactId>wallet</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>wallet</name>
	<description/>

	<properties>
		<!-- Generic properties -->
		<java.version>1.8</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
	</properties>

	<repositories>
		<repository>
		<id>novacrypto</id>
		<url>https://mvnrepository.com/artifact/io.github.novacrypto/</url>
		</repository>

		<repository>
			<id>local-maven-repo</id>
			<url>file:///${project.basedir}/src/main/resources/jar/</url>
		</repository>

	</repositories>



	<dependencies>
		<!--Thymeleaf-->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-thymeleaf</artifactId>
		</dependency>

		<!--SpringBoot-->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
		</dependency>

		<!--Spring Data-->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>

		<!--Lombok-->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<optional>true</optional>
		</dependency>

		<!--Log4j2-->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-log4j2</artifactId>
		</dependency>

		<!--Postgresql-->
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<scope>runtime</scope>
		</dependency>

		<!--Exclude logback, add log4j2 -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter</artifactId>
			<exclusions>
				<exclusion>
					<groupId>org.springframework.boot</groupId>
					<artifactId>spring-boot-starter-logging</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>org.flywaydb</groupId>
			<artifactId>flyway-core</artifactId>
		</dependency>

		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.junit.vintage</groupId>
					<artifactId>junit-vintage-engine</artifactId>
				</exclusion>
			</exclusions>
		</dependency>


		<dependency>
			<groupId>novacrypto</groupId>
			<artifactId>BIP44</artifactId>
			<version>2019.01.27</version>
		</dependency>
		<dependency>
			<groupId>local-maven-rep</groupId>
			<artifactId>BIP32</artifactId>
			<version>2019.01.27</version>
<!--			<systemPath>${project.basedir}/src/main/resources/jar/BIP32-2019.01.27.jar</systemPath>-->
		</dependency>
		<dependency>
			<groupId>local-maven-rep</groupId>
			<artifactId>BIP39</artifactId>
			<version>2019.01.27</version>
<!--			<systemPath>${project.basedir}/src/main/resources/jar/BIP39-2019.01.27.jar</systemPath>-->
		</dependency>
		<dependency>
			<groupId>local-maven-rep</groupId>
			<artifactId>ToRuntime</artifactId>
			<version>2019.01.27</version>
<!--			<systemPath>${project.basedir}/src/main/resources/jar/ToRuntime-2019.01.27.jar</systemPath>-->
		</dependency>
		<dependency>
			<groupId>local-maven-rep</groupId>
			<artifactId>SHA256</artifactId>
			<version>2019.01.27</version>
<!--			<systemPath>${project.basedir}/src/main/resources/jar/SHA256-2019.01.27.jar</systemPath>-->
		</dependency>
		<dependency>
			<groupId>local-maven-rep</groupId>
			<artifactId>Hash160</artifactId>
			<version>2019.01.27</version>
<!--			<systemPath>${project.basedir}/src/main/resources/jar/Hash160-2019.01.27.jar</systemPath>-->
		</dependency>
		<dependency>
			<groupId>local-maven-rep</groupId>
			<artifactId>Base58</artifactId>
			<version>2019.01.27</version>
<!--			<systemPath>${project.basedir}/src/main/resources/jar/Base58-2019.01.27.jar</systemPath>-->
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.flywaydb</groupId>
				<artifactId>flyway-maven-plugin</artifactId>
				<version>6.0.1</version>
				<configuration>
					<configFiles>src/main/resources/flyway.conf</configFiles>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
